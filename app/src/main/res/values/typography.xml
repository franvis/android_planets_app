<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H0">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="H0.Emphasis" parent="H0">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="H0.Positive" parent="H0.Emphasis">
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="H0.Negative" parent="H0.Emphasis">
        <item name="android:textColor">@color/redMedium</item>
    </style>

    <style name="H1" parent="H0">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H1.Emphasis" parent="H0.Emphasis">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H2" parent="H1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2.5sp</item>
    </style>

    <style name="H2.Emphasis" parent="H1.Emphasis">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H3" parent="H2">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="H3.Emphasis" parent="H2.Emphasis">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H3.Emphasis.CarParkPurple" parent="H3.Emphasis">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="H4" parent="H2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="H4.Primary" parent="H4">
        <item name="android:textColor">@color/tealMedium</item>
    </style>

    <style name="Body">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
        <item name="android:textColor">@color/greyStrong</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Body.Link" parent="Body">
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Body.Error" parent="Body">
        <item name="android:textColor">@color/redMedium</item>
    </style>

    <style name="Body.Emphasis" parent="Body">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Body.Secondary" parent="Body">
        <item name="android:textColor">@color/greySoft</item>
    </style>

    <style name="Toolbar.Title" parent="H2.Emphasis">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
